/dts-v1/;

#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	compatible = "jdcloud,re-sp-01b", "mediatek,mt7621-soc";
	model = "JDCloud RE-SP-01B";

	aliases {
		serial0 = &uart0;
		spi0 = &spi;
	};

	chosen {
		stdout-path = &uart0;
	};

	config {
		boot-btn1 = "reset";
		boot-led1 = "green:status";
		boot-led2 = "red:status";
		bootcmd_1-1 = "tftp_load_initramfs_loop";
		bootcmd_1-2 = "tftp_restore_system_loop";
		bootcmd_1-3 = "setup_netconsole";
	};

	gpio-keys {
		compatible = "gpio-keys";

		button-reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio0 18 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		led-blue {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-green {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led-red {
			color = <LED_COLOR_ID_RED>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};
};

&gpio0 {
	pcie-reset {
		gpio-hog;
		gpios = <19 GPIO_ACTIVE_LOW>;
		output-high;
	};
};

&mmc {
	status = "okay";

	cap-sd-highspeed;
};

&spi {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0000000 0x0030000>;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x0030000 0x0010000>;
			};

			partition@40000 {
				label = "factory";
				reg = <0x0040000 0x0010000>;
			};

			partition@50000 {
				label = "firmware";
				reg = <0x0050000 0x1fb0000>;
			};
		};
	};
};

&ssusb {
	status = "okay";
};

&state_default {
	/delete-node/ rgmii2-gpio_pins;
	/delete-node/ spi-nand_pins;
	/delete-node/ sdxc-nand_pins;
	/delete-node/ sdxc-gpio_pins;

	sdxc_pins {
		groups = "sdxc";
		function = "sdxc";
		bias-disable;
		input-schmitt-disable;
		drive-strength = <6>;
		slew-rate = <1>;
	};
};

&u3phy {
	status = "okay";
};
