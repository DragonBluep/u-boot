/dts-v1/;

#include "mt7628a.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	compatible = "cmcc,zy-368", "mediatek,mt7628-soc";
	model = "CMCC ZY-368";

	aliases {
		serial0 = &uart0;
		spi0 = &spi0;
	};

	chosen {
		stdout-path = &uart0;
	};

	config {
		boot-btn1 = "reset";
		boot-led1 = "blue:wlan";
		bootcmd_1-1 = "tftp_load_initramfs_loop";
		bootcmd_1-2 = "tftp_restore_system_loop";
		bootcmd_1-3 = "setup_netconsole";
	};

	gpio-keys {
		compatible = "gpio-keys";

		button-reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		led-wlan {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_WLAN;
			gpios = <&gpio1 12 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};
	};
};

&eth {
	mediatek,wan-port = <4>;

	pinctrl-names = "default";
	pinctrl-0 = <&ephy_router_mode>;
};

&spi0 {
	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x030000>;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x030000 0x010000>;
			};

			partition@40000 {
				label = "factory";
				reg = <0x040000 0x010000>;
			};

			partition@50000 {
				label = "firmware";
				reg = <0x050000 0x7b0000>;
			};
		};
	};
};

&state_default {
	gpios {
		groups = "gpio0", "spis", "spi cs1", "sdmode", "wdt", "perst", \
			 "refclk", "i2c", "uart2", "pwm0", "pwm1", "wled_a", "p3led_a";
		function = "gpio";
	};

	pleds {
		groups = "p0led_a", "p1led_a", "p2led_a", "p4led_a";
		function = "led";
	};

	/* PA/LNA: GPIO#2 GPIO#13 */
	lna {
		groups = "uart1";
		function = "sw_r";
	};

	pa {
		groups = "i2s";
		function = "antenna";
	};
};
