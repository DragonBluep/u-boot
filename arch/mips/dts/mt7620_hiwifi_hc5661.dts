/dts-v1/;

#include "mt7620.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	compatible = "hiwifi,hc5661", "mediatek,mt7620-soc";
	model = "HiWiFi HC5661";

	aliases {
		serial0 = &uartlite;
		spi0 = &spi0;
	};

	chosen {
		stdout-path = &uartlite;
	};

	config {
		boot-btn1 = "reset";
		boot-led1 = "blue:status";
		bootcmd_1-1 = "tftp_load_initramfs_loop";
		bootcmd_1-2 = "tftp_restore_system_loop";
		bootcmd_1-3 = "setup_netconsole";
	};

	gpio-keys {
		compatible = "gpio-keys";

		button-reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio0 12 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		led-status {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led-internet {
			color = <LED_COLOR_ID_BLUE>;
			function = "internet";
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-wlan {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_WLAN;
			gpios = <&gpio3 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};
};

&ehci {
	status = "disabled";
};

&mmc {
	status = "okay";

	bus-width = <4>;
	cap-sd-highspeed;
};

&spi0 {
	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x030000>;
			};

			partition@30000 {
				label = "u-boot-env";
				reg = <0x030000 0x010000>;
			};

			partition@40000 {
				label = "factory";
				reg = <0x040000 0x010000>;
			};

			partition@50000 {
				label = "firmware";
				reg = <0x50000 0xf70000>;
			};

			partition@fc0000 {
				label = "oem";
				reg = <0xfc0000 0x020000>;
			};

			partition@fe0000 {
				label = "bdinfo";
				reg = <0xfe0000 0x010000>;
			};

			partition@ff0000 {
				label = "backup";
				reg = <0xff0000 0x010000>;
			};
		};
	};
};

&state_default {
	gpios {
		groups = "i2c", "uartf", "mdio", "rgmii1", "rgmii2", "perst", \
			 "pa", "wdt rst", "wled", "ephy led";
		function = "gpio";
	};

	sd_pins {
		groups = "nand";
		function = "sd";
	};
};

&usb_phy {
	status = "disabled";
};
